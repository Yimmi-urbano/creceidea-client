<ul class="mt-6 space-y-3" id="list_method_payments">
    <% getPayments.forEach(function(payment, index) {
        if (!payment.isActive) return;

        let logoUrl = '';
        switch (payment.nameId) {
            case 'yape_qr':
                logoUrl = 'https://d1yjjnpx0p53s8.cloudfront.net/styles/logo-thumbnail/s3/032021/yape.png?nfeyt9DPqyQFYu7MebAfT.qYz11ytffk&itok=vkI2T5X4';
                break;
            case 'izipay_ya':
                logoUrl = 'https://leadershipmemphis.org/wp-content/uploads/2020/08/780370.png';
                break;
            case 'coordina_whatsapp':
            logoUrl = 'https://cdn-icons-png.freepik.com/256/3991/3991765.png?semt=ais_hybrid';
            break;
            default:
                logoUrl = 'https://via.placeholder.com/24'; 
                break;
        }
    %>
    <li>
        <label for="<%- payment.nameId %>" class="relative block">
            <input id="<%- payment.nameId %>" type="radio" name="payment" class="peer sr-only"  />
            <div
                class="flex w-full cursor-pointer items-center items-start gap-x-3 rounded-lg border bg-white p-4 shadow-sm ring-[var(--primary-color)] duration-200 peer-checked:ring-2">
                <div class="flex-none">
                    <img src="<%- logoUrl %>" alt="<%- payment.name %> logo" class="max-w-15 h-6 object-contain" />
                </div>
                <div>
                    <h3 class="pr-3 font-medium text-sm leading-none text-gray-800"><b><%- payment.name %></b></h3>
                    <p class="mt-1 text-sm text-gray-600 hidden"><%- payment.details.description || 'MÃ©todo de pago disponible.' %></p>
                </div>
            </div>
            <div
                class="absolute right-4 top-4 flex h-4 w-4 flex-none items-center justify-center rounded-full border text-white duration-200 peer-checked:bg-[var(--primary-color)] peer-checked:text-white">
                <svg class="h-2.5 w-2.5" viewBox="0 0 12 10">
                    <polyline fill="none" stroke-width="2px" stroke="currentColor" stroke-dasharray="16px"
                        points="1.5 6 4.5 9 10.5 1"></polyline>
                </svg>
            </div>
        </label>
    </li>
    <% }) %>
</ul>
