<header class="container-fluid  d-flex flex-column justify-content-center relative">
  <div class="logo-header">
    <a href="/">
    <img style="height: 70px;display: block;margin: auto;margin-top: 10px;object-fit: contain; width: 160px;"
      src=" <%- GetInfo.logo %>" alt="">
    </a>
  </div>
  <div class="tools-elements-header">
    <% if (GetInfo.type_store=="product" ) { %>
    <div class="shop-cart flex">
      <div class="relative flex items-center gap-2">
        <div class="bg-[#5c6c7d]/50 backdrop-blur-md items-center justify-between w-full flex rounded-full shadow-lg p-2 mb-5 sticky" style="top: 5px">

          <div>

              <div class="p-2 mr-1 rounded-full hover:bg-gray-100 cursor-pointer">

                  <svg class="h-6 w-6 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="#ffffff">
                  <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                  </svg>

              </div>

          </div>

          <input class="font-normal  border-0 rounded-full lg:w-[600px] py-2 pl-4 text-gray-700 bg-gray-100 leading-tight focus:outline-1 focus:ring-0 focus:outline-white focus:shadow-outline focus:outline-current lg:text-sm text-xs" type="text" placeholder="Buscar productos...">

              <div class="bg-white p-1 hover:bg-white/50 cursor-pointer mx-2 rounded-full">

                  <svg class="w-6 h-6 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                  </svg>

              </div>

      </div>
      </div>
      <%- include('parts/shop-buttons') %>

    </div>
    <% } %>
  </div>
</header>
