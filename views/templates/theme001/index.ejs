        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">

          <%- include('./parts/card_product', { productsData: dataProducts, GetInfo:GetInfo }) %>

        </div>
      </div>

    </div>
  </div>
</div>

</html>