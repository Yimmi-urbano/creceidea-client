<% productsData.forEach(product => { %>
    <div class="col-md-3 col-12 mb-3">
      <div class="card h-100 product-card">
        <img src="<%- product.image_default[0] %>" alt="<%- product.title %>" class="card-img-top">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%- product.title %></h5>
          <p class="card-text text-muted description"><%- product.description_short %></p>
  
          <div class="price-buy mt-auto d-flex justify-content-between align-items-center">
            <div class="price">
              <% if (product.price.sale && product.price.sale !== 0 && product.price.regular !== product.price.sale) { %>
                <!-- Mostrar ambos precios si hay descuento -->
                <p class="normal-price mb-0">
                  <del><%- GetInfo.catalogo.currency['symbol'] %><%= product.price.regular.toFixed(2) %></del>
                </p>
                <p class="discount-price mb-0"><%- GetInfo.catalogo.currency['symbol'] %><%= product.price.sale.toFixed(2) %></p>
              <% } else { %>
                <!-- Mostrar solo el precio regular si no hay descuento -->
                <p class="discount-price mb-0"><%- GetInfo.catalogo.currency['symbol'] %><%= product.price.regular.toFixed(2) %></p>
              <% } %>
            </div>
  
            <% if (product.is_available) { %>
              <button class="btn btn-primary">Comprar</button>
            <% } else { %>
              <p class="text-danger">No disponible</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
  